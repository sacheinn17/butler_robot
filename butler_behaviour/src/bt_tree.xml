<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="Untitled">
    <ReactiveSequence>
      <ReactiveFallback>
        <charge/>
        <in_dock/>
        <go_to_dock/>
      </ReactiveFallback>
      <ReactiveFallback>
        <ReactiveSequence>
          <executing_orders/>
          <ReactiveSequence>
            <ReactiveFallback>
              <order_canceled/>
              <ReactiveSequence>
                <ReactiveFallback>
                  <on_table/>
                  <execute_order/>
                </ReactiveFallback>
                <ReactiveFallback>
                  <order_confirmed/>
                  <wait_for_time/>
                  <add_to_waste/>
                </ReactiveFallback>
                <pop_pending_orders/>
              </ReactiveSequence>
            </ReactiveFallback>
            <add_to_waste/>
          </ReactiveSequence>
        </ReactiveSequence>
        <on_kitchen/>
        <go_to_kitchen/>
      </ReactiveFallback>
      <ReactiveFallback>
        <ReactiveSequence>
          <on_kitchen/>
          <empty_waste/>
          <ReactiveFallback>
            <wait_for_time/>
            <go_to_dock/>
          </ReactiveFallback>
        </ReactiveSequence>
      </ReactiveFallback>
      <ReactiveSequence>
        <pending_orders/>
        <ReactiveFallback>
          <on_kitchen/>
          <Inverter>
            <executing_orders/>
          </Inverter>
          <go_to_kitchen/>
        </ReactiveFallback>
      </ReactiveSequence>
    </ReactiveSequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="add_to_waste"
            editable="true"/>
    <Condition ID="charge"
               editable="true"/>
    <Action ID="empty_waste"
            editable="true"/>
    <Action ID="execute_order"
            editable="true"/>
    <Condition ID="executing_orders"
               editable="true"/>
    <Action ID="go_to_dock"
            editable="true"/>
    <Action ID="go_to_kitchen"
            editable="true"/>
    <Condition ID="in_dock"
               editable="true"/>
    <Condition ID="on_kitchen"
               editable="true"/>
    <Condition ID="on_table"
               editable="true"/>
    <Condition ID="order_canceled"
               editable="true"/>
    <Condition ID="order_confirmed"
               editable="true"/>
    <Condition ID="pending_orders"
               editable="true"/>
    <Action ID="pop_pending_orders"
            editable="true"/>
    <Action ID="wait_for_time"
            editable="true"/>
  </TreeNodesModel>

</root>
